<div id="statuses">
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-primary">Status</h6>
      <%= link_to '<i class="fas fa-download fa-sm text-white-50"></i> Generate CSV</a>'.html_safe, statuses_path(format: 'csv'), class: "d-none d-sm-inline-block btn btn-sm btn-info shadow-sm" %>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
          <tr>
            <th>Kategori</th>
            <th>Nama</th>
            <th>Posisi</th>
            <th>Alamat</th>
            <th>Tanggal mulai</th>
            <th>Tanggal selesai</th>
            <th>Komentar</th>
            <th></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
            <% @statuses.each do |status| %>
              <%= render status %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to "Tambahkan status", new_status_path, class: "btn btn-primary" %>
<% end %>