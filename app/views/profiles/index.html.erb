<p style="color: green"><%= notice %></p>

<h1>Profiles</h1>

<div id="profiles">
  <% profile = @profiles.find_by(user_id: current_user.id) %>
  <% if profile %>
    <%= render profile %>
    <p>
    <%= link_to "Edit profile", edit_profile_path(profile) %>
    </p>
  <% else %>
    <%= link_to "New profile", new_profile_path %>
  <% end %>
</div>
