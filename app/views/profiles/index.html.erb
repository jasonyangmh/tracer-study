<% if admin_signed_in? %>

  <div id="statuses">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Alumni</h6>
        <%= link_to '<i class="fas fa-download fa-sm text-white-50"></i> Generate CSV</a>'.html_safe, profiles_path(format: 'csv'), class: "d-none d-sm-inline-block btn btn-sm btn-info shadow-sm" %>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
              <th>Nama</th>
              <th>Tempat lahir</th>
              <th>Tanggal lahir</th>
              <th>Jenis kelamin</th>
              <th>Alamat</th>
              <th>Nomor telepon</th>
              <th>Jurusan</th>
              <th>Tahun</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
              <% @profiles.each do |profile| %>
                <%= render partial: "profile_row", locals: {profile: profile} %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>
